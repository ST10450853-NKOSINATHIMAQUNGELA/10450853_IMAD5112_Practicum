<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/weather2"
    android:orientation="vertical"
    tools:context=".MainScreen">

    <Space
        android:layout_width="match_parent"
        android:layout_height="81dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="242dp"
        android:layout_height="47dp"
        android:layout_gravity="center"
        android:text="Please enter the day of the week"
        android:textColor="#07123E"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/dayEditText"
        android:layout_width="242dp"
        android:layout_height="59dp"
        android:layout_gravity="center"
        android:hint="eg. Thursday"
        android:inputType="text"
        android:textColor="#88000000" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="34dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="242dp"
        android:layout_height="47dp"
        android:layout_gravity="center"
        android:text="Please enter the Min temperature"
        android:textColor="#07123E"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/minTempEditText"
        android:layout_width="242dp"
        android:layout_height="59dp"
        android:layout_gravity="center"
        android:ems="10"
        android:hint="eg. 10"
        android:inputType="text"
        android:textColor="#88000000" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="242dp"
        android:layout_height="47dp"
        android:layout_gravity="center"
        android:text="Please enter the Max temperature"
        android:textColor="#07123E"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/maxTempEditText"
        android:layout_width="242dp"
        android:layout_height="59dp"
        android:layout_gravity="center"
        android:ems="10"
        android:hint="eg. 20"
        android:inputType="text"
        android:textColor="#88000000" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="242dp"
        android:layout_height="47dp"
        android:layout_gravity="center"
        android:text="Please enter the weather condition"
        android:textColor="#07123E"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/conditionEditText"
        android:layout_width="242dp"
        android:layout_height="59dp"
        android:layout_gravity="center"
        android:ems="10"
        android:hint="eg. Sunny"
        android:inputType="text"
        android:textColor="#88000000" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="23dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="124dp">

        <Button
            android:id="@+id/addButton"
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:text="Add info"
            android:textColor="#07123E" />

        <Button
            android:id="@+id/clearButton"
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:text="Clear"
            android:textColor="#07123E" />

        <Button
            android:id="@+id/detailedViewScreen"
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Detailed View"
            android:textColor="#07123E" />

        <Button
            android:id="@+id/exitButtonSecondScreen"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:text="Exit"
            android:textColor="#07123E" />
    </FrameLayout>
</LinearLayout>