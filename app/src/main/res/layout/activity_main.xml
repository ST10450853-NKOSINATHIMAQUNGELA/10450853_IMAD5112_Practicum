<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3D6D6"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Space
        android:layout_width="match_parent"
        android:layout_height="25dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="156dp"
        android:text="Weather App"
        android:textAlignment="center"
        android:textColor="#0742A8"
        android:textSize="60sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="43dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="168dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:text="Nkosinathi Maqungela"
        android:textAlignment="center"
        android:textColor="#0742A8" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="166dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:text="ST10450853"
        android:textAlignment="center"
        android:textColor="#0742A8" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="152dp" />

    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_gravity="center"
        android:text="WELCOME TO THE WEATHER APP"
        android:textColor="#0742A8"
        android:textSize="20sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="43dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:text="Please click the button below to check the forecast"
        android:textAlignment="center"
        android:textColor="#0742A8" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="23dp" />

    <Button
        android:id="@+id/homePageButton"
        android:layout_width="201dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:text="Button" />

</LinearLayout>